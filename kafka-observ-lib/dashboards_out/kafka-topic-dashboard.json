      "schemaVersion": 39,
      "tags": [
         "kafka"
      ],
      "templating": {
         "list": [
            {
               "label": "Data source",
               "name": "datasource",
               "query": "prometheus",
               "regex": "",
               "type": "datasource"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Kafka_cluster",
               "multi": true,
               "name": "kafka_cluster",
               "query": "label_values({__name__=~\"kafka_log_log_logstartoffset\",topic!=\"__consumer_offsets\"}, kafka_cluster)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Topic",
               "multi": true,
               "name": "topic",
               "query": "label_values({__name__=~\"kafka_log_log_logstartoffset\",topic!=\"__consumer_offsets\",kafka_cluster=~\"$kafka_cluster\"}, topic)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Consumergroup",
               "multi": true,
               "name": "consumergroup",
               "query": "label_values({__name__=~\"kafka_consumergroup_lag|kafka_consumergroup_uncommitted_offsets\",topic!=\"__consumer_offsets\",consumergroup!=\"\",kafka_cluster=~\"$kafka_cluster\",topic=~\"$topic\"}, consumergroup)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            }
         ]
      },
      "time": {
         "from": "now-6h",
         "to": "now"
      },
      "timezone": "utc",
      "title": "Kafka topic overview",
      "uid": "kafka-kafka-topic-dashboard"
   }