            },
            "pluginVersion": "v11.0.0",
            "targets": [
               {
                  "datasource": {
                     "type": "prometheus",
                     "uid": "${datasource}"
                  },
                  "expr": "avg by (kafka_cluster,consumergroup,topic) (\n  kafka_consumer_lag_millis{topic!=\"__consumer_offsets\",consumergroup!=\"\",kafka_cluster=~\"$kafka_cluster\",topic=~\"$topic\",consumergroup=~\"$consumergroup\"}\n)",
                  "format": "time_series",
                  "instant": false,
